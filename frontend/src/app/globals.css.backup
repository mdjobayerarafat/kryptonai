@import "tailwindcss";

:root {
  --background: #000000;
  --foreground: #ededed;
  --neon-green: #00ff88;
  --neon-cyan: #00ffff;
  --glass-bg: rgba(0, 255, 136, 0.05);
  --glass-border: rgba(0, 255, 136, 0.2);
}

@theme inline {
  --color-background: var(--background);
  --color-foreground: var(--foreground);
  --font-sans: var(--font-geist-sans);
  --font-mono: var(--font-geist-mono);
}

body {
  background: var(--background);
  color: var(--foreground);
  font-family: var(--font-sans), Arial, Helvetica, sans-serif;
  overflow-x: hidden;
}

/* Enhanced Gradient Utilities */
.bg-gradient-radial {
  background: radial-gradient(var(--tw-gradient-stops));
}

.bg-cyber-gradient {
  background: linear-gradient(135deg, #000000 0%, #001a0d 25%, #000000 50%, #001a0d 75%, #000000 100%);
}

/* Enhanced Futuristic Background Grid */
.cyber-grid {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 1;
  opacity: 0.2;
  background-image: 
    linear-gradient(rgba(0, 255, 136, 0.2) 1px, transparent 1px),
    linear-gradient(90deg, rgba(0, 255, 136, 0.2) 1px, transparent 1px),
    linear-gradient(45deg, rgba(0, 255, 136, 0.05) 1px, transparent 1px),
    linear-gradient(-45deg, rgba(0, 255, 255, 0.03) 1px, transparent 1px),
    radial-gradient(circle at 25% 25%, rgba(0, 255, 136, 0.15) 0%, transparent 50%),
    radial-gradient(circle at 75% 75%, rgba(0, 255, 255, 0.08) 0%, transparent 50%),
    radial-gradient(circle at 50% 10%, rgba(0, 255, 136, 0.05) 0%, transparent 70%),
    radial-gradient(circle at 20% 80%, rgba(0, 255, 255, 0.03) 0%, transparent 60%);
  background-size: 
    60px 60px, 
    60px 60px, 
    120px 120px, 
    120px 120px, 
    400px 400px, 
    600px 600px,
    800px 800px,
    500px 500px;
  animation: grid-move 25s linear infinite, grid-pulse 8s ease-in-out infinite;
}

@keyframes grid-move {
  0% { transform: translate(0, 0); }
  100% { transform: translate(60px, 60px); }
}

@keyframes grid-pulse {
  0%, 100% { opacity: 0.2; }
  50% { opacity: 0.3; }
}

/* Enhanced Network Connection Lines */
.network-lines {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 2;
  opacity: 0.25;
}

.network-line {
  position: absolute;
  height: 1px;
  background: linear-gradient(90deg, transparent, var(--neon-green), rgba(0, 255, 255, 0.8), var(--neon-green), transparent);
  animation: pulse-line 4s ease-in-out infinite;
  box-shadow: 
    0 0 10px rgba(0, 255, 136, 0.4),
    0 0 20px rgba(0, 255, 136, 0.2),
    0 0 30px rgba(0, 255, 136, 0.1);
}

.network-line::before {
  content: '';
  position: absolute;
  top: -1px;
  left: 0;
  right: 0;
  height: 3px;
  background: linear-gradient(90deg, transparent, rgba(0, 255, 136, 0.3), rgba(0, 255, 255, 0.2), rgba(0, 255, 136, 0.3), transparent);
  filter: blur(2px);
}

@keyframes pulse-line {
  0%, 100% { 
    opacity: 0.2;
    transform: scaleX(0.8);
  }
  50% { 
    opacity: 1;
    transform: scaleX(1.3);
  }
}

/* Enhanced Floating Particle Field */
.particle-field {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 3;
}

.cyber-particle {
  position: absolute;
  width: 2px;
  height: 2px;
  background: var(--neon-green);
  border-radius: 50%;
  box-shadow: 
    0 0 8px var(--neon-green),
    0 0 16px rgba(0, 255, 136, 0.6),
    0 0 24px rgba(0, 255, 136, 0.3),
    0 0 32px rgba(0, 255, 136, 0.1);
  animation: float-particle linear infinite;
}

.cyber-particle::before {
  content: '';
  position: absolute;
  top: -2px;
  left: -2px;
  right: -2px;
  bottom: -2px;
  background: radial-gradient(circle, rgba(0, 255, 136, 0.6) 0%, rgba(0, 255, 136, 0.3) 50%, transparent 70%);
  border-radius: 50%;
  animation: particle-pulse 3s ease-in-out infinite;
}

.cyber-particle::after {
  content: '';
  position: absolute;
  top: -4px;
  left: -4px;
  right: -4px;
  bottom: -4px;
  background: radial-gradient(circle, rgba(0, 255, 255, 0.2) 0%, transparent 60%);
  border-radius: 50%;
  animation: particle-pulse 3s ease-in-out infinite reverse;
}

@keyframes float-particle {
  0% {
    transform: translateY(100vh) translateX(0) scale(0) rotate(0deg);
    opacity: 0;
  }
  10% {
    opacity: 1;
    transform: scale(1) rotate(45deg);
  }
  90% {
    opacity: 1;
    transform: rotate(315deg);
  }
  100% {
    transform: translateY(-100vh) translateX(100px) scale(0) rotate(360deg);
    opacity: 0;
  }
}

@keyframes particle-pulse {
  0%, 100% { transform: scale(1); opacity: 0.8; }
  50% { transform: scale(1.5); opacity: 0.4; }
}

/* Enhanced Glassmorphism Components */
.glass-panel {
  background: rgba(0, 30, 20, 0.5);
  backdrop-filter: blur(30px) saturate(1.2);
  border: 1px solid rgba(0, 255, 136, 0.3);
  border-radius: 24px;
  box-shadow: 
    0 16px 50px rgba(0, 0, 0, 0.5),
    inset 0 1px 0 rgba(0, 255, 136, 0.2),
    inset 0 -1px 0 rgba(0, 255, 136, 0.1),
    0 0 40px rgba(0, 255, 136, 0.15);
  position: relative;
  overflow: hidden;
}

.glass-panel::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, 
    rgba(0, 255, 136, 0.15) 0%, 
    rgba(0, 255, 255, 0.08) 25%,
    transparent 50%, 
    rgba(0, 255, 136, 0.05) 75%,
    rgba(0, 255, 255, 0.1) 100%);
  border-radius: inherit;
  pointer-events: none;
  animation: glass-shimmer 6s ease-in-out infinite;
}

.glass-panel::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 1px;
  background: linear-gradient(90deg, transparent, rgba(0, 255, 136, 0.6), transparent);
  animation: glass-scan 4s linear infinite;
}

@keyframes glass-shimmer {
  0%, 100% { opacity: 0.3; }
  50% { opacity: 0.6; }
}

@keyframes glass-scan {
  0% { transform: translateX(-100%); }
  100% { transform: translateX(100%); }
}

.glass-card {
  background: rgba(0, 40, 30, 0.4);
  backdrop-filter: blur(25px) saturate(1.3);
  border: 1px solid rgba(0, 255, 136, 0.35);
  border-radius: 20px;
  position: relative;
  overflow: hidden;
  box-shadow: 
    0 12px 40px rgba(0, 0, 0, 0.4),
    0 0 50px rgba(0, 255, 136, 0.12),
    inset 0 1px 0 rgba(0, 255, 136, 0.2);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.glass-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, 
    transparent, 
    rgba(0, 255, 136, 0.2), 
    rgba(0, 255, 255, 0.15), 
    rgba(0, 255, 136, 0.2),
    transparent);
  transition: left 0.6s ease;
  z-index: 1;
}

.glass-card:hover::before {
  left: 100%;
}
}

.glass-card:hover {
  transform: translateY(-8px);
  border-color: rgba(0, 255, 136, 0.5);
  box-shadow: 
    0 20px 60px rgba(0, 0, 0, 0.4),
    0 0 60px rgba(0, 255, 136, 0.2);
}

/* Subtle Neon Text Effects */
.neon-text {
  color: var(--neon-green);
  text-shadow: 
    0 0 3px var(--neon-green),
    0 0 8px rgba(0, 255, 136, 0.6),
    0 0 15px rgba(0, 255, 136, 0.3);
  letter-spacing: 0.05em;
}

.neon-glow {
  text-shadow: 
    0 0 5px var(--neon-green),
    0 0 12px rgba(0, 255, 136, 0.7),
    0 0 25px rgba(0, 255, 136, 0.4),
    0 0 40px rgba(0, 255, 136, 0.2);
  animation: text-flicker 3s ease-in-out infinite;
}

@keyframes text-flicker {
  0%, 100% { opacity: 1; }
  98% { opacity: 1; }
  99% { opacity: 0.9; }
}

.cyber-heading {
  font-weight: 800;
  letter-spacing: 0.02em;
  background: linear-gradient(135deg, #ffffff 0%, var(--neon-green) 50%, #ffffff 100%);
  background-clip: text;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  position: relative;
}

.cyber-heading::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, transparent 0%, rgba(0, 255, 136, 0.05) 50%, transparent 100%);
  animation: heading-sweep 4s ease-in-out infinite;
  pointer-events: none;
}

@keyframes heading-sweep {
  0%, 100% { transform: translateX(-100%); opacity: 0; }
  50% { transform: translateX(100%); opacity: 0.6; }
}

/* Subtle Text Shadow Utilities */
.text-shadow-glow {
  text-shadow: 
    0 0 5px currentColor,
    0 0 10px rgba(0, 255, 136, 0.4);
}

/* Enhanced Holographic UI Cards */
.holo-card {
  background: linear-gradient(135deg, rgba(0, 255, 136, 0.12), rgba(0, 255, 255, 0.08), rgba(0, 255, 136, 0.06));
  backdrop-filter: blur(25px);
  border: 2px solid rgba(0, 255, 136, 0.3);
  border-radius: 24px;
  position: relative;
  overflow: hidden;
  transform-style: preserve-3d;
  transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 
    0 10px 40px rgba(0, 0, 0, 0.3),
    0 0 50px rgba(0, 255, 136, 0.1);
}

.holo-card:hover {
  transform: translateY(-15px) rotateX(8deg) rotateY(2deg);
  border-color: rgba(0, 255, 136, 0.6);
  box-shadow: 
    0 25px 60px rgba(0, 0, 0, 0.4),
    0 0 80px rgba(0, 255, 136, 0.2),
    inset 0 0 30px rgba(0, 255, 136, 0.1);
}

.holo-card::after {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(45deg, transparent 30%, rgba(0, 255, 136, 0.15) 50%, rgba(0, 255, 255, 0.1) 60%, transparent 70%);
  transform: rotate(45deg);
  animation: holo-sweep 4s linear infinite;
}

@keyframes holo-sweep {
  0% { transform: translateX(-100%) translateY(-100%) rotate(45deg); }
  100% { transform: translateX(100%) translateY(100%) rotate(45deg); }
}

/* Enhanced Hexagonal Containers */
.hex-container {
  position: relative;
  margin: 3rem 0;
  filter: drop-shadow(0 0 30px rgba(0, 255, 136, 0.2));
}

.hex-frame {
  position: relative;
  background: linear-gradient(135deg, rgba(0, 255, 136, 0.15), rgba(0, 255, 255, 0.08));
  clip-path: polygon(20% 0%, 80% 0%, 100% 40%, 80% 100%, 20% 100%, 0% 40%);
  padding: 3rem;
  border: 3px solid var(--neon-green);
  filter: drop-shadow(0 0 25px rgba(0, 255, 136, 0.4));
  animation: hex-pulse 3s ease-in-out infinite;
}

@keyframes hex-pulse {
  0%, 100% { 
    filter: drop-shadow(0 0 25px rgba(0, 255, 136, 0.4));
    transform: scale(1);
  }
  50% { 
    filter: drop-shadow(0 0 35px rgba(0, 255, 136, 0.6));
    transform: scale(1.02);
  }
}

/* Enhanced Scanline Effects */
.scanlines {
  position: relative;
  overflow: hidden;
}

.scanlines::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 3px;
  background: linear-gradient(90deg, transparent, var(--neon-green), rgba(0, 255, 255, 0.8), var(--neon-green), transparent);
  animation: scanline 3s linear infinite;
  z-index: 10;
  box-shadow: 0 0 20px rgba(0, 255, 136, 0.5);
}

.scanlines::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: repeating-linear-gradient(
    0deg,
    transparent,
    transparent 2px,
    rgba(0, 255, 136, 0.03) 2px,
    rgba(0, 255, 136, 0.03) 4px
  );
  pointer-events: none;
  animation: scan-flicker 0.15s linear infinite;
}

@keyframes scanline {
  0% { transform: translateY(-100vh); opacity: 0; }
  10% { opacity: 1; }
  90% { opacity: 1; }
  100% { transform: translateY(100vh); opacity: 0; }
}

@keyframes scan-flicker {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.8; }
}

/* Enhanced Futuristic Buttons */
.cyber-button {
  position: relative;
  background: linear-gradient(135deg, rgba(0, 255, 136, 0.25), rgba(0, 255, 136, 0.15));
  border: 2px solid var(--neon-green);
  color: var(--neon-green);
  font-weight: 700;
  letter-spacing: 0.08em;
  text-transform: uppercase;
  padding: 1.2rem 2.5rem;
  border-radius: 12px;
  overflow: hidden;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  backdrop-filter: blur(15px);
  box-shadow: 
    0 0 30px rgba(0, 255, 136, 0.2),
    inset 0 1px 0 rgba(0, 255, 136, 0.2);
}

.cyber-button:hover {
  background: linear-gradient(135deg, var(--neon-green), rgba(0, 255, 136, 0.8));
  color: #000;
  box-shadow: 
    0 0 50px rgba(0, 255, 136, 0.5),
    0 0 100px rgba(0, 255, 136, 0.2),
    inset 0 0 30px rgba(0, 0, 0, 0.2);
  transform: scale(1.05) translateY(-2px);
  border-color: rgba(0, 255, 255, 0.8);
}

.cyber-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.6s ease;
}

.cyber-button:hover::before {
  left: 100%;
}

.cyber-button::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  background: radial-gradient(circle, rgba(0, 255, 136, 0.3) 0%, transparent 70%);
  transition: all 0.4s ease;
  transform: translate(-50%, -50%);
}

.cyber-button:hover::after {
  width: 200px;
  height: 200px;
}

/* Enhanced Waveform Animation */
.waveform {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 3px;
  height: 50px;
  padding: 10px;
  background: rgba(0, 255, 136, 0.05);
  border-radius: 8px;
  border: 1px solid rgba(0, 255, 136, 0.2);
}

.wave-bar {
  width: 4px;
  background: linear-gradient(to top, var(--neon-green), rgba(0, 255, 255, 0.8));
  border-radius: 2px;
  animation: wave-pulse 1.8s ease-in-out infinite;
  box-shadow: 
    0 0 10px rgba(0, 255, 136, 0.5),
    0 0 20px rgba(0, 255, 136, 0.2);
  position: relative;
}

.wave-bar::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(to top, transparent, rgba(255, 255, 255, 0.3));
  border-radius: inherit;
}

.wave-bar:nth-child(1) { animation-delay: 0s; }
.wave-bar:nth-child(2) { animation-delay: 0.1s; }
.wave-bar:nth-child(3) { animation-delay: 0.2s; }
.wave-bar:nth-child(4) { animation-delay: 0.3s; }
.wave-bar:nth-child(5) { animation-delay: 0.4s; }
.wave-bar:nth-child(6) { animation-delay: 0.5s; }
.wave-bar:nth-child(7) { animation-delay: 0.6s; }
.wave-bar:nth-child(8) { animation-delay: 0.7s; }
.wave-bar:nth-child(9) { animation-delay: 0.8s; }
.wave-bar:nth-child(10) { animation-delay: 0.9s; }
.wave-bar:nth-child(11) { animation-delay: 1.0s; }
.wave-bar:nth-child(12) { animation-delay: 1.1s; }

@keyframes wave-pulse {
  0%, 100% { 
    height: 12px; 
    opacity: 0.6;
    transform: scaleY(1);
  }
  50% { 
    height: 50px; 
    opacity: 1;
    transform: scaleY(1.2);
  }
}

/* Enhanced Bloom Effect */
.bloom {
  filter: brightness(1.3) saturate(1.4) contrast(1.1);
  box-shadow: 
    0 0 25px rgba(0, 255, 136, 0.5),
    0 0 50px rgba(0, 255, 136, 0.3),
    0 0 75px rgba(0, 255, 136, 0.1);
}

/* Enhanced Scrollbar */
::-webkit-scrollbar {
  width: 10px;
}

::-webkit-scrollbar-track {
  background: rgba(0, 0, 0, 0.9);
  border-radius: 5px;
}

::-webkit-scrollbar-thumb {
  background: linear-gradient(180deg, var(--neon-green), var(--neon-cyan));
  border-radius: 5px;
  box-shadow: 
    0 0 15px rgba(0, 255, 136, 0.5),
    inset 0 0 5px rgba(255, 255, 255, 0.2);
}

::-webkit-scrollbar-thumb:hover {
  box-shadow: 
    0 0 25px rgba(0, 255, 136, 0.8),
    inset 0 0 10px rgba(255, 255, 255, 0.3);
}

/* Selection */
::selection {
  background-color: rgba(0, 255, 136, 0.4);
  color: #ffffff;
  text-shadow: 0 0 10px rgba(0, 255, 136, 0.8);
}

/* Responsive Adjustments */
@media (max-width: 768px) {
  .holo-card:hover {
    transform: translateY(-8px) rotateX(3deg);
  }
  
  .cyber-button {
    padding: 1rem 2rem;
    font-size: 0.9rem;
  }
  
  .glass-panel {
    border-radius: 16px;
  }
  
  .cyber-grid {
    background-size: 40px 40px, 40px 40px, 300px 300px, 400px 400px;
  }
}

/* Enhanced Timestamp Display */
.timestamp {
  position: fixed;
  top: 24px;
  left: 24px;
  z-index: 1000;
  font-family: 'Courier New', monospace;
  color: var(--neon-green);
  text-shadow: 0 0 15px var(--neon-green);
  background: rgba(0, 0, 0, 0.85);
  border: 2px solid rgba(0, 255, 136, 0.4);
  border-radius: 12px;
  padding: 0.8rem 1.2rem;
  font-size: 0.9rem;
  backdrop-filter: blur(15px);
  box-shadow: 
    0 0 30px rgba(0, 255, 136, 0.2),
    inset 0 1px 0 rgba(0, 255, 136, 0.2);
  animation: timestamp-pulse 2s ease-in-out infinite;
}

@keyframes timestamp-pulse {
  0%, 100% { 
    box-shadow: 
      0 0 30px rgba(0, 255, 136, 0.2),
      inset 0 1px 0 rgba(0, 255, 136, 0.2);
  }
  50% { 
    box-shadow: 
      0 0 40px rgba(0, 255, 136, 0.4),
      inset 0 1px 0 rgba(0, 255, 136, 0.4);
  }
}
